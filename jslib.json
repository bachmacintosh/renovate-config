{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config that should be used for all BachMacintosh JS/TS libraries",
  "extends": ["config:js-lib", ":gitSignOff"],
  "schedule": [
    "On the 1st day of the month on Sunday after 5am and before 11am",
    "On the 2nd day of the month on Sunday after 5am and before 11am",
    "On the 3rd day of the month on Sunday after 5am and before 11am",
    "On the 4th day of the month on Sunday after 5am and before 11am",
    "On the 5th day of the month on Sunday after 5am and before 11am",
    "On the 6th day of the month on Sunday after 5am and before 11am",
    "On the 7th day of the month on Sunday after 5am and before 11am"
  ],
  "timezone": "America/New_York",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "labels": ["dependencies"],
  "assignees": ["bachmacintosh"],
  "rebaseWhen": "behind-base-branch",
  "platformCommit": true,
  "commitMessageTopic": "Dependency \"{{depName}}\"",
  "minimumReleaseAge": "3 days",
  "dependencyDashboardHeader": "",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "commitMessageTopic": "Development Dependency \"{{depName}}\""
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "extends": ["monorepo:typescript-eslint"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "Development Dependency TypeScript ESLint",
      "groupSlug": "typescript-eslint-monorepo"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/facebook/jest",
        "https://github.com/kulshekhar/ts-jest"
      ],
      "matchPackageNames": ["@types/jest"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "Jest and/or Related Development Dependencies",
      "groupSlug": "jest-and-deps"
    },
    {
      "matchSourceUrls": ["https://github.com/logtail/logtail-js"],
      "groupName": "Logtail Packages",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript Development Version",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major", "minor"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript Development Version",
      "dependencyDashboardApproval": true,
      "automerge": false,
      "platformAutomerge": false
    },
    {
      "matchPackageNames": ["typescript"],
      "matchDepTypes": ["peerDependencies"],
      "labels": ["typescript"],
      "commitMessageTopic": "Supported TypeScript Versions",
      "dependencyDashboardApproval": true,
      "automerge": false,
      "platformAutomerge": false
    }
  ]
}
