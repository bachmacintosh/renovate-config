{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config that should be used for any BachMacintosh projects that are not JS/TS libraries",
  "extends": ["config:base", "group:allNonMajor", ":gitSignOff"],
  "schedule": ["on Monday after 5am and before 11am"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "assignees": ["bachmacintosh"],
  "rebaseWhen": "behind-base-branch",
  "platformCommit": true,
  "stabilityDays": 3,
  "dependencyDashboardHeader": "",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchSourceUrls": ["https://github.com/logtail/logtail-js"],
      "groupName": "Logtail packages",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false,
      "platformAutomerge": false
    }
  ]
}
