{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config that should be used for any BachMacintosh projects that are not JS/TS libraries",
  "extends": ["config:base", "group:allNonMajor", ":gitSignOff"],
  "schedule": ["after 5am and before 11am"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "assignees": ["bachmacintosh"],
  "rebaseWhen": "behind-base-branch",
  "platformCommit": true,
  "commitMessageTopic": "Dependency \"{{depName}}\"",
  "stabilityDays": 3,
  "dependencyDashboardHeader": "",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major", "minor"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript",
      "dependencyDashboardApproval": true
    }
  ]
}
